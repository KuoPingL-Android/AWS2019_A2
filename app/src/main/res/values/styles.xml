<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Theme customization. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="profile_text_style">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/profileTextColor</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="profile_text_style2">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/profileInputColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
